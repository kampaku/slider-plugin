{
  "ignorePatterns": [
    "dist",
    "config",
    "test",
    "*.config.*",
    "coverage"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "import"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": ["airbnb-typescript/base"],
  "overrides": [
    {
      "files": ["*.ts"],
      "rules": {
        "lines-between-class-members": "off",
        "@typescript-eslint/lines-between-class-members": ["off"]
      }
    }
  ]
}